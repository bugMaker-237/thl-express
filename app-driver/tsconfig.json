{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "skipLibCheck": true,
    "lib": ["es6", "dom", "es2015.iterable"],
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"],
      "*": ["./node_modules/*"],
      "@apps.common/services": [
        "../common-modules/apps-common/services/index.ts"
      ],
      "@apps.common/services/storage/interfaces": [
        "../common-modules/apps-common/services/storage/interfaces/index.ts"
      ],
      "@apps.common/models": ["../common-modules/apps-common/models/index.ts"],
      "@apps.common/config": ["../common-modules/apps-common/config/index.ts"],
      "@apps.common/utils": ["../common-modules/apps-common/utils/index.ts"],
      "@app.shared/*": ["../app-shared/*"],
      "@apps.common/modules": [
        "../common-modules/apps-common/modules/mobile/index.ts"
      ],
      "@root/*": ["../common-modules/apps-common/*"]
    }
  },
  "exclude": ["node_modules", "platforms"],
  "include": [
    "src/**/*.ts",
    "reference.d.ts",
    "../app-shared/components/app.component.ts"
  ]
}
